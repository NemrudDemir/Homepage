@page
@model Contact
@{
    ViewData["Title"] = "Contact";
}

<head>
    <link rel="stylesheet" href="~/css/contact.css" />
</head>
<div class="contact-container">
    <form id="contact" action="" method="post">
        <h3 class="colored">Contact</h3>
        <h4><!--subtitle--></h4>
        <fieldset>
            <input asp-for="Name" placeholder="Your name" type="text" tabindex="1" required autofocus>
        </fieldset>
        <fieldset>
            <input asp-for="EmailAddress" placeholder="Your Email Address" type="email" tabindex="2" required>
        </fieldset>
        <fieldset>
            <textarea asp-for="Message" placeholder="Type your Message Here...." tabindex="3" required></textarea>
        </fieldset>
        <fieldset>
            <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
        </fieldset>
    </form>
</div>